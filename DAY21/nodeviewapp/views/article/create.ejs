<!--우측 콘텐츠 헤더영역 -->
<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>신규게시글 등록</h2>
    <ol class="breadcrumb">
      <li>
        <a href="/">Home-></a>
      </li>
      <li>
        <a>신규게시글 작성-></a>
      </li>
      <li class="active">
        <strong>등록</strong>
      </li>
    </ol>
  </div>
  <div class="col-lg-2"></div>
</div>

<!--우측 콘텐츠 영역 -->
<form action="/article/create" id="articleForm" method="post">
  <div class="wrapper wrapper-content">
    <div class="ibox-content m-b-sm border-bottom">
      <div class="row">
        <div class="col-sm-4">
          <div class="form-group">
            <label class="control-label">게시판</label>
            <select
              name="boardTypeCode"
              id="boardTypeCode"
              class="form-control"
            >
              <option value="0">전체</option>
              <option value="1">공지게시판</option>
              <option value="2">기술블로깅</option>
            </select>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-12">
          <div class="form-group">
            <label class="control-label">글제목</label>
            <input type="text" name="title" id="title" class="form-control" />
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-12">
          <div class="form-group">
            <label class="control-label">내용</label>
            <textarea
              class="form-control"
              id="contents"
              name="contents"
              rows="10"
              cols="5"
            ></textarea>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-4">
          <div class="form-group">
            <label class="control-label">게시글 유형</label>
            <select
              name="articleTypeCode"
              id="articleTypeCode"
              class="form-control"
            >
              <option value="0">선택해요</option>
              <option value="1">상단고정</option>
              <option value="2">일반</option>
            </select>
          </div>
        </div>
        <div class="col-sm-4">
          <div class="form-group">
            <label class="control-label">게시여부</label>
            <select
              name="isDisplayCode"
              id="isDisplayCode"
              class="form-control"
            >
              <option value="0">전체</option>
              <option value="1">Y</option>
              <option value="2">N</option>
            </select>
          </div>
        </div>
        <div class="col-sm-4">
          <div class="form-group">
            <label class="control-label">작성자명</label>
            <input
              type="text"
              name="register"
              id="register"
              class="form-control"
            />
          </div>
        </div>
      </div>

      <div class="text-center">
        <button type="submit" class="btn btn-primary">저장</button>
        <a href="/article/list" class="btn btn-info">목록</a>
      </div>
    </div>
  </div>
</form>

<script>
  //html페이지가 브라우저에서 렌더링이 다 됐으면 발생하는 이벤트
  $(document).ready(function () {
    $("#boardTypeCode").focus();
    console.log("렌더링완료. create");
  });

  //articleForm에서 submit이 발생하면 function실행.
  $("#articleForm").submit(function () {
    //debugger;
    if ($("#boardTypeCode").val() === "0") {
      alert("선택해");
      $("#boardTypeCode").focus();
      return false;
    }
    if ($("#title").val() === "") {
      alert("제목입력해");
      $("#title").focus();
      return false;
    }
    if ($("#contents").val() === "") {
      alert("내용입력해");
      $("#contents").focus();
      return false;
    }
    if ($("#articleTypeCode").val() === "0") {
      alert("게시유형 선택해");
      $("#articleTypeCode").focus();
      return false;
    }
    if ($("#isDisplayCode").val() === "0") {
      alert("게시여부 선택해");
      $("#isDisplayCode").focus();
      return false;
    }
    if ($("#register").val() === "") {
      alert("작성자명 선택해");
      $("#register").focus();
      return false;
    }
    //debugger;
    return true;
  });
</script>
