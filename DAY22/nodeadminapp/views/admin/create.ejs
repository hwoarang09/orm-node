<!--우측 콘텐츠 영역 -->
<form action="/admin/create" id="adminForm" method="post">
  <div class="wrapper wrapper-content">
    <div class="ibox-content m-b-sm border-bottom">
      <div class="row">
        <div class="col-sm-4">
          <div class="form-group">
            <label class="control-label">이름</label>
            <input
              type="text"
              name="admin_name"
              id="admin_name"
              class="form-control"
            />
          </div>
        </div>
        <div class="col-sm-4">
          <div class="form-group">
            <label class="control-label">아이디</label>
            <input
              type="text"
              name="admin_id"
              id="admin_id"
              class="form-control"
            />
          </div>
        </div>
        <div class="col-sm-4">
          <div class="form-group">
            <label class="control-label">비밀번호</label>
            <input
              type="password"
              name="admin_password"
              id="admin_password"
              class="form-control"
            />
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-6">
          <div class="form-group">
            <label class="control-label">관리자email</label>
            <input type="email" name="email" id="email" class="form-control" />
          </div>
        </div>
        <div class="col-sm-6">
          <div class="form-group">
            <label class="control-label">전화번호</label>
            <input
              type="text"
              name="telephone"
              id="telephone"
              class="form-control"
            />
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-6">
          <div class="form-group">
            <label class="control-label">소속회사</label>
            <select name="company_code" id="company_code" class="form-control">
              <option value="0">선택해요</option>
              <option value="1">모두의연구소</option>
              <option value="2">모름캠프</option>
              <option value="3">구글</option>
            </select>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="form-group">
            <label class="control-label">부서명</label>
            <input
              type="text"
              name="dept_name"
              id="dept_name"
              class="form-control"
            />
          </div>
        </div>
      </div>

      <div class="text-center">
        <button type="submit" class="btn btn-primary">저장</button>
        <a href="/article/list" class="btn btn-info">목록</a>
      </div>
    </div>
  </div>
</form>

<script>
  //html페이지가 브라우저에서 렌더링이 다 됐으면 발생하는 이벤트
  $(document).ready(function () {
    $("#boardTypeCode").focus();
    console.log("렌더링완료. create");
  });

  //articleForm에서 submit이 발생하면 function실행.
  $("#articleForm").submit(function () {
    //debugger;
    if ($("#boardTypeCode").val() === "0") {
      alert("선택해");
      $("#boardTypeCode").focus();
      return false;
    }
    if ($("#title").val() === "") {
      alert("제목입력해");
      $("#title").focus();
      return false;
    }
    if ($("#contents").val() === "") {
      alert("내용입력해");
      $("#contents").focus();
      return false;
    }
    if ($("#articleTypeCode").val() === "0") {
      alert("게시유형 선택해");
      $("#articleTypeCode").focus();
      return false;
    }
    if ($("#isDisplayCode").val() === "0") {
      alert("게시여부 선택해");
      $("#isDisplayCode").focus();
      return false;
    }
    if ($("#register").val() === "") {
      alert("작성자명 선택해");
      $("#register").focus();
      return false;
    }
    //debugger;
    return true;
  });
</script>
