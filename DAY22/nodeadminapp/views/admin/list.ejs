<!--우측 상단 헤더 영역 -->
<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>관리자 목록 조회</h2>
    <ol class="breadcrumb">
      <li>
        <a href="/">Home -></a>
      </li>
      <li>
        <a>관리자 목록 -></a>
      </li>
      <li class="active">
        <strong>조회</strong>
      </li>
    </ol>
  </div>
  <div class="col-lg-2"></div>
</div>

<!--우측 콘텐츠 영역 -->
<div class="wrapper wrapper-content">
  <form action="/admin/list" method="post" id="searchForm">
    <div class="ibox-content m-b-sm border-bottom">
      <div class="row">
        <div class="col-md-4">
          <div class="form-group">
            <label class="control-label" for="OrderName">부서명</label>
            <input
              type="dept_name"
              name="dept_name"
              value="<%=searchOption.dept_name%>"
              class="form-control"
            />
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <label class="control-label" for="OrderName">이메일</label>
            <input
              type="email"
              name="email"
              value="<%=searchOption.email%>"
              class="form-control"
            />
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <label class="control-label" for="OrderName">이름</label>
            <input
              type="text"
              name="admin_name"
              value="<%=searchOption.admin_name%>"
              class="form-control"
            />
          </div>
        </div>
      </div>
      <div class="text-center">
        <input type="submit" class="btn btn-primary" value="조회" />
        <a href="/admin/create" class="btn btn-info">신규</a>
      </div>
    </div>
  </form>

  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-content">
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th width="10%">관리자번호</th>
                  <th width="10%">소속회사</th>
                  <th width="10%">관리자id</th>
                  <th width="10%">관리자이름</th>
                  <th width="20%">이메일</th>
                  <th width="10%">전화번호</th>
                  <th width="10%">부서</th>
                  <th width="20%">등록날짜</th>
                </tr>
              </thead>
              <tbody class="hoverTblBody">
                <% for (var i=0; i < admin_members.length; i++) { %>

                <tr>
                  <% Object.keys(admin_members[i]).forEach(function(key) { %> <%
                  if (key === 'used_yn_code' ||key === 'edit_date' ||key ===
                  'admin_password' || key === 'reg_user_id' || key ===
                  'edit_user_id') { %> <% return; %> <% } %>
                  <td>
                    <% if (key === 'title') { %>
                    <a href="/admin/update?idx=<%=admin_members[i][key]%>">
                      <%= admin_members[i][key] %>
                    </a>
                    <% } else if (key === 'admin_id') { %>

                    <a
                      href="/admin/modify/<%=admin_members[i]['admin_member_id']%>"
                    >
                      <%= admin_members[i][key] %>
                    </a>
                    <% } else if (key === 'company_code') { %> <% if
                    (admin_members[i][key] === 1) { %>
                    <p>모두의연구소</p>
                    <% } else if (admin_members[i][key] === 2) { %>
                    <p>모름캠프</p>
                    <% } else { %>
                    <p>구글</p>

                    <% } } else { %>
                    <p><%= admin_members[i][key] %></p>
                    <% } %>
                  </td>
                  <% }); %>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
