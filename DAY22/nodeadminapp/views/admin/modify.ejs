
        <!--우측 콘텐츠 헤더영역 -->
        <div class="row wrapper border-bottom white-bg page-heading">
          <div class="col-lg-10">
            <h2>운영자 정보 확인 및 수정</h2>
            <ol class="breadcrumb">
              <li>
                <a href="/">Home-></a>
              </li>
              <li>
                <a>운영자 정보 확인 및 수정-></a>
              </li>
              <li class="active">
                <strong>수정</strong>
              </li>
            </ol>
          </div>
          <div class="col-lg-2"></div>
        </div>

        <!--우측 콘텐츠 영역 -->
        <form
          action="/admin/modify/<%=admin.admin_member_id%>"
          id="adminForm"
          method="post"
        >
          <div class="wrapper wrapper-content">
            <div class="ibox-content m-b-sm border-bottom">
              <div class="row">
                <div class="col-sm-3">
                  <div class="form-group">
                    <label class="control-label">이름</label>
                    <input
                      type="text"
                      name="admin_name"
                      id="admin_name"
                      class="form-control"
                      value=<%= admin.admin_name %>
                    />
                  </div>
                </div>
                <div class="col-sm-3">
                  <div class="form-group">
                    <label class="control-label">이메일</label>
                    <input
                      type="email"
                      name="email"
                      id="email"
                      class="form-control"
                      value=<%= admin.email %>
                    />
                  </div>
                </div>
                <div class="col-sm-3">
                  <div class="form-group">
                    <label class="control-label">회사명</label>
                    <select
                      name="company_code"
                      id="company_code"
                      class="form-control"
                    >
                      <option value="0" <% if(admin.company_code === 0) { %> selected <%} %>>전체</option>
                      <option value="1" <% if(admin.company_code === 1) { %> selected <%} %>>모두의연구소</option>
                      <option value="2" <% if(admin.company_code === 2) { %> selected <%} %>>모름캠프</option>
                      <option value="3" <% if(admin.company_code === 3) { %> selected <%} %>>구글</option>
                    </select>
                  </div>  
                </div>
                <div class="col-sm-3">
                  <div class="form-group">
                    <label class="control-label">부서명</label>
                    <input
                      type="text"
                      name="dept_name"
                      id="dept_name"
                      class="form-control"
                      value=<%= admin.dept_name %>
                    />
                  </div>
                </div>              
                                               
              </div>
              <div class="row">
                
              </div>

              <div class="row">
                <div class="col-sm-3">
                  <div class="form-group">
                    <label class="control-label">비밀번호</label>
                    <input
                      type="password"
                      name="admin_password"
                      id="admin_password"
                      class="form-control"
                      value=<%= admin.admin_password %>
                    />
                  </div>
                </div>
                <div class="col-sm-3">
                  <div class="form-group">
                    <label class="control-label">전화번호</label>
                    <input
                      type="text"
                      name="telephone"
                      id="telephone"
                      class="form-control"
                      value=<%= admin.telephone %>
                    />
                  </div>
                </div>
                <div class="col-sm-3">
                  <div class="form-group">
                    <label class="control-label">사용여부</label>
                    <select
                      name="used_yn_code"
                      id="used_yn_code"
                      class="form-control"
                    >
                      <option value="0" <% if(admin.used_yn_code === 0) { %> selected <%} %>>사용안함</option>
                      <option value="1" <% if(admin.used_yn_code === 1) { %> selected <%} %>>사용</option>
                      
                    </select>
                  </div>
                </div>                               
              </div>
              <div class="row">
                <div class="col-sm-3">
                  <div class="form-group">
                    <label class="control-label">등록자명</label>
                    <input
                      type="text"
                      name="reg_user_id"
                      id="reg_user_id"
                      class="form-control"
                      value=<%= admin.reg_user_id %>
                    />
                  </div>
                </div>
                <div class="col-sm-3">
                  <div class="form-group">
                    <label class="control-label">수정자명</label>
                    <input
                      type="text"
                      name="edit_user_id"
                      id="edit_user_id"
                      class="form-control"
                      value=<%= admin.edit_user_id ? admin.edit_user_id : "1"  %>
                    />
                  </div>
                </div>                
              </div>              
              </div>



              <div class="text-center">
                <input type="submit" id='btnEdit' name='btnEdit' class="btn btn-primary" value="수정"></input>
                <input type="submit" id='btnDelete' name='btnDelete' class="btn btn-danger" value="삭제"></input>
                <a href="/admin/list" class="btn btn-info">목록</a>
              </div>
            </div>
          </div>
        </form>

    <script>
      $("#adminForm").submit(function () {
      var edit_user_id = $("#edit_user_id").val();

        // 값이 비어 있는지 먼저 확인
        if (edit_user_id.trim() === "") {
            alert("값을 입력하세요.");
            return;
        }
        
        if ($.isNumeric(edit_user_id)) {
            return true;
        } else {
            alert("수정자명이 숫자가 아닙니다.");
            $("#edit_user_id").focus();
            
        }}
    </script>

