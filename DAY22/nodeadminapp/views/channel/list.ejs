<!--우측 상단 헤더 영역 -->
<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>채널 목록 조회</h2>
    <ol class="breadcrumb">
      <li>
        <a href="/">Home -></a>
      </li>
      <li>
        <a>채널 목록 -></a>
      </li>
      <li class="active">
        <strong>조회</strong>
      </li>
    </ol>
  </div>
  <div class="col-lg-2"></div>
</div>

<!--우측 콘텐츠 영역 -->
<div class="wrapper wrapper-content">
  <form action="/member/list" method="post" id="searchForm">
    <div class="ibox-content m-b-sm border-bottom">
      <div class="row">
        <div class="col-md-4">
          <div class="form-group">
            <label class="control-label" for="OrderName">채널 이름</label>
            <input
              type="text"
              name="channel_name"
              value="<%=searchOption.channel_name%>"
              class="form-control"
            />
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <label class="control-label" for="OrderName">채널 설명</label>
            <input
              type="text"
              name="channel_desc"
              value="<%=searchOption.channel_desc%>"
              class="form-control"
            />
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <label class="control-label" for="MobileNo">채널상태</label>
            <select
              name="channel_state_code"
              id="channel_state_code"
              class="form-control"
            >
              <option value="9" <% if( searchOption.channel_state_code === "9") { %> selected <%} %>>전체</option>
              <option value="1" <% if( searchOption.channel_state_code === "1") { %> selected <%} %>>사용중</option>
              <option value="0" <% if( searchOption.channel_state_code === "0") { %> selected <%} %>>사용 안함</option>
            </select>

          </div>
        </div>
      </div>
      <div class="text-center">
        <input type="submit" class="btn btn-primary" value="조회" />
        <a href="/article/create" class="btn btn-info">신규</a>
      </div>
    </div>
  </form>

  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-content">
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th width="10%">채널ID</th>
                  <th width="10%">카테고리</th>
                  <th width="20%">채널명</th>
                  <th width="20%">유저 제한</th>
                  <th width="10%">채널 설명</th>
                  <th width="10%">채널상태</th>
                  <th width="20%">등록날짜</th>
                </tr>
              </thead>
              <tbody class="hoverTblBody">
                <% for (var i=0; i < channel_list.length; i++) { %>

                <tr>
                  <% Object.keys(channel_list[i]).forEach(function(key) { %> <% if
                  (key === 'channel_id' || key === 'channel_img_path' || key ===
                  'edit_date' || key === 'reg_member_id' || key ===
                  'edit_member_id') { %> <% return; %> <% } %>
                  <td>
                    <% if (key === 'title') { %>
                    <a href="/member/update?idx=<%=channel_list[i][key]%>">
                      <%= channel_list[i][key] %>
                    </a>
                    <% } else if (key === 'member_id') { %>

                    <a href="/member/modify/<%=channel_list[i]['member_id']%>">
                      <%= channel_list[i][key] %>
                    </a>

                    <% } else if (key === 'isDisplayCode') { %> <% if
                    (channel_list[i][key] === 1) { %>
                    <p>게시함</p>
                    <% } else { %>
                    <p>게시안함</p>
                    <% }%> <% } else { %>
                    <p><%= channel_list[i][key] %></p>
                    <% } %>
                  </td>
                  <% }); %>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
