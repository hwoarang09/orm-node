<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>신규게시글등록</h2>
    <ol class="breadcrumb">
      <li><a href="/">Home</a> ></li>
      <li><a>신규게시글작성</a> ></li>
      <li class="active">
        <strong>등록</strong>
      </li>
    </ol>
  </div>
  <div class="col-lg-2"></div>
</div>

<!--우측 콘텐츠 영역 -->
<form action="/article/create" id="articleForm" method="post">
  <div class="wrapper wrapper-content">
    <div class="ibox-content m-b-sm border-bottom">
      <!-- 게시판유형 -->
      <div class="row">
        <div class="col-sm-4">
          <div class="form-group">
            <label class="control-label">게시판</label>
            <select
              name="boardTypeCode"
              id="boardTypeCode"
              class="form-control"
            >
              <option value="0">선택</option>
              <option value="1">공지게시판</option>
              <option value="2">자유게시판</option>
            </select>
          </div>
        </div>
      </div>

      <!-- 글제목영역 -->
      <div class="row">
        <div class="col-sm-12">
          <div class="form-group">
            <label class="control-label">글제목</label>
            <input type="text" name="title" id="title" class="form-control" />
          </div>
        </div>
      </div>

      <!-- 글내용 입력영역 -->
      <div class="row">
        <div class="col-sm-12">
          <div class="form-group">
            <label class="control-label">글내용</label>
            <textarea
              class="form-control"
              name="contents"
              id="contents"
              rows="10"
              cols="5"
            ></textarea>
          </div>
        </div>
      </div>

      <!-- 게시글유형,게시여부,등록자 입력영역 -->
      <div class="row">
        <div class="col-sm-4">
          <div class="form-group">
            <label class="control-label">게시글유형</label>
            <select
              name="articleTypeCode"
              id="articleTypeCode"
              class="form-control"
            >
              <option value="0">선택</option>
              <option value="1">상단고정게시글</option>
              <option value="2">일반게시글</option>
            </select>
          </div>
        </div>

        <div class="col-sm-4">
          <div class="form-group">
            <label class="control-label">게시여부</label>
            <select
              name="isDisplayCode"
              id="isDisplayCode"
              class="form-control"
            >
              <option value="9">선택</option>
              <option value="1">게시함</option>
              <option value="0">게시안함</option>
            </select>
          </div>
        </div>

        <div class="col-sm-4">
          <div class="form-group">
            <label class="control-label">작성자명</label>
            <input
              type="text"
              name="register"
              id="register"
              class="form-control"
            />
          </div>
        </div>
      </div>

      <!-- 저장/목록이동 버튼  -->
      <div class="text-center">
        <button type="submit" class="btn btn-primary">저장</button>
        <a href="/article/list" class="btn btn-info">목록</a>
      </div>
    </div>
  </div>
</form>
