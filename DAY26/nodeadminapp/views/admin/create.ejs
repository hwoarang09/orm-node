<!--우측 콘텐츠 영역 -->
<form action="/admin/create" id="adminForm" method="post">
  <div class="wrapper wrapper-content">
    <div class="ibox-content m-b-sm border-bottom">
      <div class="row">
        <div class="col-sm-4">
          <div class="form-group">
            <label class="control-label">이름</label>
            <input
              type="text"
              name="admin_name"
              id="admin_name"
              class="form-control"
              required
              maxlength="100"
            />
          </div>
        </div>
        <div class="col-sm-4">
          <div class="form-group">
            <label class="control-label">아이디</label>
            <input
              type="text"
              name="admin_id"
              id="admin_id"
              class="form-control"
              required
              maxlength="100"
            />
          </div>
        </div>
        <div class="col-sm-4">
          <div class="form-group">
            <label class="control-label">비밀번호</label>
            <input
              type="password"
              name="admin_password"
              id="admin_password"
              class="form-control"
              required
              maxlength="100"
            />
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-6">
          <div class="form-group">
            <label class="control-label">관리자email</label>
            <input
              type="email"
              name="email"
              id="email"
              class="form-control"
              required
              maxlength="100"
            />
          </div>
        </div>
        <div class="col-sm-6">
          <div class="form-group">
            <label class="control-label">전화번호</label>
            <input
              type="text"
              name="telephone"
              id="telephone"
              class="form-control"
              required
              maxlength="100"
            />
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-6">
          <div class="form-group">
            <label class="control-label">소속회사</label>
            <select name="company_code" id="company_code" class="form-control">
              <option value="0">선택해요</option>
              <option value="1">모두의연구소</option>
              <option value="2">모름캠프</option>
              <option value="3">구글</option>
            </select>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="form-group">
            <label class="control-label">부서명</label>
            <input
              type="text"
              name="dept_name"
              id="dept_name"
              class="form-control"
              required
              maxlength="100"
            />
          </div>
        </div>
      </div>

      <div class="text-center">
        <button type="submit" class="btn btn-primary">저장</button>
        <a href="/admin/list" class="btn btn-info">목록</a>
      </div>
    </div>
  </div>
</form>

