  <!-- 관리자 조회 옵션 입력 영역  -->
  <form action="/admin/list" method="post" id="searchForm">
    <div class="ibox-content m-b-sm border-bottom">
        
        <div class="row">
            <div class="col-sm-4">
                <div class="form-group">
                    <label class="control-label" for="OrderNo">부서명</label>
                    <select name="dept_name" id="dept_name" class="form-control">
                        <option value="" <% if( searchOption.dept_name == "전체"){ %> selected <% } %> >전체</option>
                        <option value="개발부" <% if( searchOption.dept_name == "개발부"){ %> selected <% } %>>개발부</option>
                        <option value="잠수부" <% if( searchOption.dept_name == "잠수부"){ %> selected <% } %>>잠수부</option>
                    </select>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    <label class="control-label" for="OrderName">이메일</label>
                    <input type="email" name="email" value="<%=searchOption.email%>" class="form-control">
                </div>
            </div>
            <div class="col-sm-4">
              <div class="form-group">
                  <label class="control-label" for="OrderName">이름</label>
                  <input type="name" name="name" value="<%=searchOption.name%>" class="form-control">
              </div>
          </div>
        </div>
        
        <div class="text-center">
            <input type="submit" class="btn btn-primary" value="조회" />
            <a href="/admin/create" class="btn btn-info">신규</a>
        </div>
    </div>
</form>

<!-- 관리자 조회결과 목록 표시영역  -->
<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-content">
                <div class="table-responsive">

                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th width="5%">id</th>
                                
                                <th width="10%">이름</th>
                                <th width="10%">아이디</th>
                                <th width="10%">소속회사</th>
                                <th width="10%">부서</th>
                                <th width="10%">이메일</th>
                                <th width="10%">전화번호</th>
                                <th width="5%">사용여부</th>
                                <th width="15%">등록일시</th>
                                <th width="15%">수정일시</th>
                            </tr>
                        </thead>
                        
                        <tbody class="hoverTblBody">


                            <% for(var i =0;i<admin_members.length;i++){ %>
                               
                                <tr>
                                    <td><%=admin_members[i].admin_member_id%></td>
                                    <td><%=admin_members[i].admin_name%></td>
                                    <td><%=admin_members[i].admin_id%></td>
                                    <td>
                                        <% if(admin_members[i].company_code == 1){%>
                                            모두의연구소
                                        <% } else{ %>
                                            모름캠프
                                        <% }%>
                                    </td>
                                    <td><%=admin_members[i].dept_name%></td>
                                    <td><a href="/admin/modify/<%=admin_members[i].admin_member_id%>"><%=admin_members[i].email%></a></td>
                                    <td><%=admin_members[i].telephone%></td>
                                    
                                    <td>
                                        <% if(admin_members[i].used_yn_code == 1){%>
                                            Y
                                        <% } else{ %>
                                            N
                                        <% }%>
                                    </td>
                                    
                                    
                                    <td><%=moment(admin_members[i].reg_date).format('YYYY-MM-DD HH:mm')%></td>
                                    <td><%=moment(admin_members[i].edit_date).format('YYYY-MM-DD HH:mm')%></td>
                                </tr>

                           <% } %>
                           

                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>

</div>